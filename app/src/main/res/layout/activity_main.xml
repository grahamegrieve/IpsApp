<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/scanQRButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/scan_qr" />

    <Button
        android:id="@+id/generateQRButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scanQRButton"
        android:layout_centerInParent="true"
        android:text="@string/generate_qr" />

    <Button
        android:id="@+id/getFromAlexButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanQRButton"
        android:layout_centerInParent="true"
        android:layout_marginTop="56dp"
        android:text="@string/Get_IPS" />

    <Button
        android:id="@+id/getFromPeter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanQRButton"
        android:layout_centerInParent="true"
        android:layout_marginTop="110dp"
        android:text="Get IPS from Peter" />

    <Button
        android:id="@+id/getFromMedicAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanQRButton"
        android:layout_centerInParent="true"
        android:layout_marginTop="168dp"
        android:text="Get from Medic Alert" />

    <Button
        android:id="@+id/getFromTamanu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanQRButton"
        android:layout_centerInParent="true"
        android:layout_marginTop="232dp"
        android:text="Get from Tamanu" />
</RelativeLayout>
